{% extends '_layout.html.twig' %}

{% block title %}
    {{ parent() }} - {{ category.name }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col">
            <h1 class="mb-0">{{ category.name }}</h1>
            <a href="/categories">Back</a>

            <div class="mt-3">
                {{ category.name }} has for id: {{ category.id }}
            </div>
        </div>
    </div>


{% endblock %}