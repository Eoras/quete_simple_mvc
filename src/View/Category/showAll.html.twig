{% extends '_layout.html.twig' %}

{% block title %}
    {{ parent() }} - Category list
{% endblock %}

{% block content %}
<h1>Categories</h1>
    <ul class="list-group">
        {% for category in categories %}
            <a class="list-group-item" href="/category/{{ category.id }}">
                {{ category.name }}
            </a>
        {% endfor %}
    </ul>
{% endblock %}