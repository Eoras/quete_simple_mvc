{% extends '_layout.html.twig' %}

{% block title %}
    {{ parent() }} - {{ editMode ? 'Edit' : 'Add' }} category
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col">
            <h1 class="mb-0">{{ editMode ? 'Edit' : 'Add' }} category</h1>
            <a href="/categories">Back</a>

            <div class="mt-3">
                <form action="/category/{{ editMode ? "edit/" ~ category.id : "add" }}" method="POST">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" name="name" id="name" value="{{ category.name }}">
                        <small class="text-danger">{{ errors.name }}</small>
                    </div>
                    <button type="submit" class="float-right btn btn-success">Add</button>
                    <small class="text-danger">{{ errors.global }}</small>
                </form>
            </div>
        </div>
    </div>


{% endblock %}