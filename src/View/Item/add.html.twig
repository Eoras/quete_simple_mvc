{% extends '_layout.html.twig' %}

{% block title %}
    {{ parent() }} - {{ editMode ? 'Edit' : 'Add' }} item
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col">
            <h1 class="mb-0">{{ editMode ? 'Edit' : 'Add' }} item</h1>
            <a href="/">Back</a>

            <div class="mt-3">
                <form action="/item/{{ editMode ? "edit/" ~ item.id : "add" }}" method="POST">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" name="title" id="title" value="{{ item.title }}">
                        <small class="text-danger">{{ errors.title }}</small>
                    </div>
                    <button type="submit" class="float-right btn btn-success">{{ editMode ? 'Update' : 'Add' }}</button>
                    <small class="text-danger">{{ errors.global }}</small>
                </form>
            </div>
        </div>
    </div>


{% endblock %}