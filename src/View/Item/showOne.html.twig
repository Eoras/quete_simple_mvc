{% extends '_layout.html.twig' %}

{% block title %}
    {{ parent() }} - {{ item.title }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col">
            <h1 class="mb-0">{{ item.title }}</h1>
            <a href="/">Back</a>

            <div class="mt-3">
                <ul>
                    <li>id: {{ item.id }}</li>
                    <li>title: {{ item.title }}</li>
                    <li><a href="/item/edit/{{ item.id }}">Edit</a></li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}